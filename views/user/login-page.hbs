<div id="signup" class="container-fluid">
    <div class="row " style="">
        <div class="col-md-12">
            <form action="/login" method="post" enctype="multipart/form-data">
                <h1 class="text-center" style="font-weight: 800; color: rgb(38, 38, 37);"><b>Switch To Your Account</b>
                </h1>
                <p style="color: red;">{{#if err}}
                    {{err}}
                    {{/if}}
                </p>
                <div class="form-group">
                    <label class="" for="exampleInputEmail1">Email address</label>
                    <input name="email" type="email" class="form-control" id="exampleInputEmail1"
                        aria-describedby="emailHelp" placeholder="Email">

                </div>
                <div class="form-group">
                    <label class="" for="exampleInputPassword1">Password</label>
                    <input name="password" type="password" class="form-control" id="exampleInputPassword1"
                        placeholder="Password">
                </div>
                <div class="form-group" style="text-align: right;">
                    <a href="/signup" class="text-dark">Create Your Account...</a>
                </div>
                <button type="submit" style="width: 100%; border-radius: 12px;" class="btn btn-dark">Submit</button>
            </form>
        </div>
    </div>
</div>

<style>
    #signup {
        background-image: url(/images/pexels-aleksandar-pasaric-1437493.jpg);
        background-attachment: fixed;
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>